@model IEnumerable<DiplomovaPrace.Models.Task>

@{
    ViewBag.Title = "Seznam úkolů";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Seznam úkolů</h2>

<p>
</p>
<button class="btn btn-block btn-success" onclick="location.href='@Url.Action("Create","Task")'">Vytvořit úkol</button>


<div class="modal fade" id="modalCreate" role="dialog">
    <form method="post" action="@Url.Action("ChangeState","Task")" autocomplete="off">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Změnit stav úkolu</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    @Html.Label("Vyberte nového člena")

                    @Html.DropDownList("ID_State", null, htmlAttributes: new { @class = "form-control", @required = "required" })


                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-block">Změnit stav</button>
                </div>
            </div>
        </div>
    </form>

</div>

<div class="container tableContainer">
    <div class="table-responsive">
        <form action="@Url.Action("Index","Task")" method="post" class="form-inline">

            <div class="form-group col-md-2">
                @Html.DropDownList("ID_Priority", (SelectList)ViewBag.ID_Priority, new { @class = "form-control", @style = "width: 100%" })

            </div>
            <div class="form-group col-md-2">
                @Html.DropDownList("ID_State", (SelectList)ViewBag.ID_State, new { @class = "form-control", @style = "width: 100%" })

            </div>
            <div class="form-group col-md-2">
                @Html.DropDownList("ID_User_Creator", (SelectList)ViewBag.ID_User_Creator, new { @class = "form-control", @style = "width: 100%" })
            </div>
            <div class="form-group col-md-2">
                @Html.DropDownList("ID_User_Executor", (SelectList)ViewBag.ID_User_Executor, new { @class = "form-control", @style = "width: 100%" })

            </div>

            <div class="form-check col-md-2">
                @Html.CheckBox("MyTask", (Boolean)ViewBag.MyTask, htmlAttributes: new { @class = "form-check-input", @id = "check" })
                <label class="form-check-label" for="check">Moje úkoly</label>
            </div>
            <div class="form-group col-md-2">
                <button class="btn btn-primary btn-block btn-sm" type="submit">Zobrazit</button>

            </div>
        </form>
        <p></p>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Zadavatel")
                    </th>
                    <th>
                        @Html.DisplayName("Zadání úkolu")
                    </th>
                    <th>
                        @Html.DisplayName("Vyřizovatel")
                    </th>
                    <th>
                        @Html.DisplayName("Termín dokončení")
                    </th>
                    <th>
                        @Html.DisplayName("Priorita")
                    </th>

                    <th>
                        @Html.DisplayName("Stav")
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    var color = "";
                    if (item.ID_State == 1)
                    {
                        color = "#5bc0de";
                    }
                    else if (item.ID_State == 2)
                    {
                        color = "#f0ad4e";
                    }
                    else
                    {
                        color = "#5cb85c";
                    }
                    <tr>

                        <td>
                            @item.User.Name @item.User.Surname
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @item.User1.Name @item.User1.Surname
                        </td>
                        <td>
                            @item.Deadline.Value.ToShortDateString()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriorityTask.Priority)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.StateTask.State)
                        </td>
                        <td style="background-color: @color">
                            <div class="btn-group pull-right">
                                <div class="form-group">
                                    @if (item.ID_User_Creator == (int)Session["userID"])
                                    {
                                        <button class="btn btn-sm btn-outline-dark" title="Upravit úkol" onclick="location.href='@Url.Action("Edit", "Task", new { id = item.ID })'"><i class="fa fa-edit"></i></button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-dark" title="Upravit úkol" onclick="location.href='@Url.Action("Edit", "Task", new { id = item.ID })'" disabled><i class="fa fa-edit"></i></button>

                                    }
                                </div>
                                <div class="form-group">
                                    @if (item.ID_User_Creator == (int)Session["userID"] || item.ID_User_Executor == (int)Session["userID"])
                                    {
                                        <button class="btn btn-sm btn-outline-dark" title="Zobrazit úkol" onclick="location.href='javascript:OpenDialog(@item.ID)'"><i class="fa fa-eye"></i></button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-dark" title="Zobrazit úkol" onclick="location.href='@Url.Action("Details", "Task", new { id = item.ID })'" disabled><i class="fa fa-eye"></i></button>
                                    }
                                </div>
                                <div class="form-group">
                                    @if (item.ID_User_Creator == (int)Session["userID"])
                                    {
                                        <button class="btn btn-sm btn-outline-danger" title="Odstranit úkol" onclick="location.href='javascript:Delete(@item.ID);'"><i class="fa fa-trash"></i></button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-danger" title="Odstranit úkol" onclick="location.href='javascript:Delete(@item.ID);'" disabled><i class="fa fa-trash"></i></button>

                                    }
                                </div>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts{
    <script>
        function Delete(id) {
            jQuery.ajax({
                url: '@Url.Action("Delete","Task")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                },
                error: function (error) {
                    location.reload();
                }
            });
        }

        function OpenDialog(id) {
            document.getElementById("modalCreate").modal('show');
        }
    </script>

}


