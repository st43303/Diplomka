@model IEnumerable<DiplomovaPrace.Models.ProjectUser>

@{
    ViewBag.Title = "Sdílené projekty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sdílené projekty</h2>

<p></p>
<div class="container tableContainer">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    @if (Model.Count() == 0)
                    {
                        <th>
                            @Html.DisplayName("Nemáte žádné sdílené projekty")
                        </th>
                    }
                    else
                    {
                        <th>
                            @Html.DisplayNameFor(model=>model.Project.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model=>model.Project.ID_Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model=>model.Project.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model=>model.Project.DateCreated)
                        </th>
                        <th>
                            @Html.DisplayName("Akce")
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Project.Name)
                        </td>

                        <td>
                            <a class="btn-link" href="@Url.Action("Details","Profile",new { id=item.Project.ID_Author})">@item.Project.User.Name @item.Project.User.Surname</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Project.DescriptionPreview)
                        </td>
                        <td>
                            <p>@item.Project.DateCreated.Value.ToShortDateString()</p>
                        </td>

                        <td>
                            <div class="btn-group float-right">
                                <div class="form-group">
                                    <button class="btn btn-sm btn-outline-dark" title="Vybrat projekt" onclick="location.href='@Url.Action("SetProject",new { id=item.ID_Project})'"><i class="fa fa-eye"></i></button>
                                </div>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


